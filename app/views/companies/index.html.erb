<h1>Listing companies</h1>
 
<table>
  <tr>
    <th>Company Name</th>
    <th>Grade</th>
    <th>Branches Allowed</th>
    <th>Backs Allowed</th>
    <th>B.E. Cutoff</th>
    <th>Class XII Cuttoff</th>
    <th>Class X Cuttoff</th>
    <th>Deadline</th>
    <th>Package</th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.grade %></td>
      <td><%= company.branchesAllowed %></td>
      <td><%= company.backsAllowed %></td>
      <td><%= company.beCutoff %></td>
      <td><%= company.xiiCutoff %></td>
      <td><%= company.xCutoff %></td>
      <td><%= company.deadline %></td>
      <td><%= company.package %></td>
      <td><%= link_to 'Show', company_path(company) %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Destroy', company_path(company),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New company', new_company_path %>